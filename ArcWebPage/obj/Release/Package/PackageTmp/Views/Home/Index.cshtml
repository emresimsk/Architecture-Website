@model IEnumerable<ImageFilePath>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-holder elem scale-bg2 transition3">
    <div class="content full-height">
        <div class="swiper-container" id="horizontal-slider" data-mwc="1" data-mwa="0">
            <div class="swiper-wrapper">

                @{
                    if (Model != null)
                    {
                        foreach (var img in Model)
                        {
                            <div class="swiper-slide">
                                <div class="bg" style="background-image: url(@img.ImagePath)"></div>
                                <div class="overlay"></div>
                                <div class="slide-title-holder">
                                    <div class="slide-title">
                                        <h3 class="transition">
                                            <a class="ajax transition2" href="#">Seyda Kartal</a>
                                        </h3>
                                        <h4>Architecture and CGArt</h4>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
            <div class="swiper-nav-holder hor">
                <a class="swiper-nav arrow-left transition " href="#">
                    <i class="fa fa-long-arrow-left"></i>
                </a>
                <a class="swiper-nav  arrow-right transition" href="#">
                    <i class="fa fa-long-arrow-right"></i>
                </a>
            </div>
        </div>
        <div class="pagination"></div>
    </div>
</div>
@model ArcWebPage.Models.ProjectAndImages

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    if (Model.Project != null)
    {
        <div class="content-holder elem scale-bg2 transition3">
            <div class="content full-height mm">
                <div class="wrapper-inner full-height no-padding">
                    <div class="swiper-container" id="horizontal-slider" data-mwc="1" data-mwa="0">
                        <div class="swiper-wrapper">
                            @{
                                if (Model.Images != null)
                                {
                                    foreach (var image in Model.Images)
                                    {
                                        <div class="swiper-slide">
                                            <br>
                                            <div class="bg" style="background-image: url(@image.ImagePath)"></div>
                                            <div class="overlay"></div>
                                            <div class="zoomimage">
                                                <img src="@image.ImagePath" class="intense" alt=""><i class="fa fa-expand"></i>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        </div>
                        <div class="swiper-nav-holder hor">
                            <a class="swiper-nav arrow-left transition " href="#">
                                <i class="fa fa-long-arrow-left"></i>
                            </a>
                            <a class="swiper-nav  arrow-right transition" href="#">
                                <i class="fa fa-long-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                    <div class="pagination"></div>
                </div>
            </div>
            <div class="fixed-column">
                <div class="container">
                    <section class="no-border">
                        <div class="section-title">
                            <h3>@Model.Project.Title</h3>
                        </div>
                        <div class="project-details">
                            <h3>@Model.Project.TitleSecond</h3>
                            <p>@Model.Project.Comment</p>
                            <!--
                            <ul class="descr">
                                <li><span>Date :</span> 26.05.2014 </li>
                                <li><span>Client :</span> House Big </li>
                                <li><span>Status :</span> Completed </li>
                                <li>
                                    <span>Location : </span> <a href="https://goo.gl/maps/UzN5m" target="_blank"> Kharkiv Ukraine </a>
                                </li>
                            </ul>
                            -->
                        </div>
                        <div class="content-nav">
                            <!--
                            <ul>
                                <li>
                                    <a href="portfolio-single2.html" class="ajax">
                                        <i class="fa fa-long-arrow-left"></i>
                                    </a>
                                </li>
                                <li>
                                    <span>/</span>
                                </li>
                                <li>
                                    <a href="portfolio-single3.html" class="ajax">
                                        <i class="fa fa-long-arrow-right"></i>
                                    </a>
                                </li>
                            </ul>
                            -->
                            <div class="p-all">
                                <a href="@Url.Action("Project", "Home")" class="ajax">
                                    <i class="fa fa-th-large"></i>
                                </a>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    }
}
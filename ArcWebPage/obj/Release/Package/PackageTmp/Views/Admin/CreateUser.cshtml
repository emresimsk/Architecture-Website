@model ArcWebPage.Identity.UserApp

@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<script>

    $(document).ready(function() {
        message();
    });

    function message() {
        var messa = @Html.Raw(TempData["CreateMessage"]);

        if (messa) {
            toastr.success('Profil güncelleme işlemi başarılı. Tatlisim ❤');
        } else {
            toastr.success('Profil güncelleme işlemi başarısız. Tatlisim ❤');
        }

    }

</script>


@using (Html.BeginForm("CreateUser", "Admin", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <div class="card">
        <div class="card-body col-sm-6">
            <div class="pull-left">
                <h4 class="card-title"></h4>
            </div>
            <div class="pull-right" data-toggle="buttons">
            </div>

            <div class="card-body">
                <div class="md-form">
                    <input type="email" id="Email" name="Email" class="email-ic"/>
                    <label for="Email">Email:</label>
                </div>
            </div>

            <div class="card-body">
                <div class="md-form">
                    <input type="text" id="NameSoyname" name="NameSoyname"/>
                    <label for="NameSoyname">Ad Soyad:</label>
                </div>
            </div>
        </div>
        <div class="card-body col-sm-6">
            <div class="pull-left">
                <h4 class="card-title"></h4>
            </div>
            <div class="pull-right" data-toggle="buttons">
                <label>Kullanıcı oluşturma sayfası</label>
            </div>

            <div class="card-body">
                <div class="md-form">
                    <input type="text" id="UserName" name="UserName" class="email-ic"/>
                    <label for="UserName">Kullanıcı Adı:</label>
                </div>
            </div>

            <div class="card-body">
                <div class="md-form">
                    <input type="password" id="password" name="password"/>
                    <label for="password">Şifre:</label>
                </div>
            </div>
        </div>

        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

        <div class="col-sm-2" style="margin: 5px">
            <button type="submit" class="btn btn-block btn-secondary">Kaydet</button>
        </div>
        <br/>
        <div class="row">

        </div>
    </div>
}